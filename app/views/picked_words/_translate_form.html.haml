= simple_form_for(:translation_form, :url => translate_path, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :from_lang, label: 'From', collection: [:en, :ca, :es], include_blank: false, required: false
    = f.input :name
    = f.input :to_lang, label: 'To', collection: [:en, :ca, :es], include_blank: false, required: false
    = f.input :translation, placeholder: 'provided by translation service'

  .form-actions
    = f.button :submit, 'Translate'
