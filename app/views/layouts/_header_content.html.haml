%nav{:role => "navigation"}
  .navbar-inner
    = link_to 'Pickingwords', root_path
    %ul
      -# %li= link_to 'Help', help_path

      - if logged_in?
        - if user_roles.include? 'admin'
          - cache("nav/admin-#{user.to_param}", expires_in: 1.hour) do
            = render 'layouts/navigation_admin'

        -else
          - cache("nav/user-#{user.to_param}", expires_in: 1.hour) do
            = render 'layouts/navigation_user'

      - else
        %li= link_to 'Sign in', new_user_session_path
