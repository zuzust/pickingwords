- title 'Sign in'

.row
  .span8.offset2
    .pw-main_header
      %h1 Sign in

    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
      = f.error_notification

      = f.input :email, required: false, autofocus: true, input_html: {class: 'input-medium'}
      = f.input :password, input_html: {class: 'input-medium'}

      - if devise_mapping.rememberable?
        = f.input :remember_me, as: :boolean, input_html: {class: 'input-medium'}

      .form-actions
        = f.button :submit, 'Sign in', class: 'btn-primary'

    .pw-view_buttons
      = render "devise/shared/links"
