= simple_form_for(@picked_word, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :tracked_id, as: :hidden
    = f.input :from_lang, label: 'From', collection: [:en, :ca, :es], include_blank: false, required: false, readonly: true
    = f.input :name, label: false, required: false, readonly: true
    = f.input :to_lang, label: 'To', collection: [:en, :ca, :es], include_blank: false, required: false, readonly: true
    = f.input :translation, label: false
    = f.input :fav, as: :boolean, label: 'Favorite?'
    = f.simple_fields_for :contexts do |fc|
      = fc.input :sentence, label: false, as: :text, input_html: { cols: 50, rows: 5, class: 'span4' }, required: false, readonly: true
      = fc.input :translation, label: false, as: :text, input_html: { cols: 50, rows: 5, class: 'span4' }, required: false

  .form-actions
    = f.button :submit
