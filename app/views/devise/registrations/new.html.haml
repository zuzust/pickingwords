- title 'Sign up'

.row
  .span8.offset2
    .pw-main_header
      %h1 Sign up

    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f|
      = f.error_notification

      = f.input :name, required: false, autofocus: true, input_html: {class: 'input-medium'}
      = f.input :email, placeholder: 'user@example.com', input_html: {class: 'input-medium'}
      = f.input :password, input_html: {class: 'input-medium'}
      = f.input :password_confirmation, input_html: {class: 'input-medium'}

      .form-actions
        = f.button :submit, 'Sign up', class: 'btn-primary'
